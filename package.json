{
  "name": "planner-calendar-goal-app-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently -n fe,be -c cyan,magenta \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "cd backend && uv run uvicorn app.main:app --reload --port 8000",
    "build": "npm run build --workspace=frontend",
    "lint": "eslint .",
    "supabase:start": "SUPABASE_WORKDIR=backend supabase start",
    "supabase:stop": "SUPABASE_WORKDIR=backend supabase stop",
    "supabase:status": "SUPABASE_WORKDIR=backend supabase status",
    "supabase:reset": "SUPABASE_WORKDIR=backend supabase db reset",
    "supabase:migration:new": "SUPABASE_WORKDIR=backend supabase migration new",
    "supabase:gen:types": "SUPABASE_WORKDIR=backend supabase gen types typescript --local > frontend/src/types/supabase.ts"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "supabase": "^2.15.0"
  }
}
